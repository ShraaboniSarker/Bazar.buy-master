<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/ivImageOneUPIS"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="5dp"/>
                        <ImageView
                            android:id="@+id/ivImageTwoUPIS"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="5dp"/>
                        <ImageView
                            android:id="@+id/ivImageThreeUPIS"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_margin="5dp"/>
                    </LinearLayout>
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Owner Name"
                        style="@style/textView"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvOwnerNameUPIS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/textView"
                        android:text="Owner Name"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Product Name"
                        android:textStyle="bold"
                        style="@style/textView"/>
                    <TextView
                        android:id="@+id/tvProductNameUPIS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Product Name"
                        style="@style/textView"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Category"
                        style="@style/textView"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvCategoryUPIS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/textView"
                        android:text="Category"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quentity"
                        style="@style/textView"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvProductQuentityUPIS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/textView"
                        android:text="Quantity"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Price"
                        style="@style/textView"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvProductPriceUPIS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/textView"
                        android:text="Price"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Description"
                        style="@style/textView"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvDescriptionUPIS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/textView"
                        android:text="Description"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location"
                        style="@style/textView"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvLocationUPIS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/textView"
                        android:text="Location"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Owner E-mail"
                        style="@style/textView"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvOwnerEmailUPIS"
                        style="@style/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:autoLink="email"
                        android:text="Owner Email" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Owner Mobile"
                        style="@style/textView"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/tvOwnerMobileNoUPIS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/textView"
                        android:autoLink="phone"
                        android:text="Mobile No"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="5dp">
                    <Button
                        android:id="@+id/btnTrash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trash"
                        android:textColor="#ffffff"
                        android:background="@drawable/add_product_button"/>
                    <Button
                        android:id="@+id/btnEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Edit"
                        android:textColor="#ffffff"
                        android:background="@drawable/add_product_button"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>